<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_color"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sv_group_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="always"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_20" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space_20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_6"
                    android:text="我发的任务"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_17" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5" >

                    <LinearLayout
                        android:id="@+id/liner_unpay"
                        android:layout_width="wrap_content"
                          android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="@dimen/space_66"
                            android:layout_height="@dimen/space_66" >

                            <ImageView
                                android:id="@+id/iv_unpay"
                                android:padding="@dimen/space_6"
                                android:layout_width="@dimen/space_60"
                                android:layout_height="@dimen/space_60"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ico_bangbang_dfk" />

                            <TextView
                                android:id="@+id/tv_unpay_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/icon_message_noread"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                android:visibility="gone"
                                android:gravity="center"
                                 />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/toolb_search_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待确认付款"
                            android:textColor="@color/main_tool_text_nor"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liner_unget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="@dimen/space_66"
                            android:layout_height="@dimen/space_66" >

                            <ImageView
                                android:id="@+id/iv_unget"
                                android:padding="@dimen/space_6"
                                android:layout_width="@dimen/space_60"
                                android:layout_height="@dimen/space_60"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ico_bangbang_dlq" />

                            <TextView
                                android:id="@+id/tv_unget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/icon_message_noread"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                android:visibility="gone" 
                                android:gravity="center"
                                />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待领取"
                            android:textColor="@color/main_tool_text_nor"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liner_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="@dimen/space_66"
                            android:layout_height="@dimen/space_66" >

                            <ImageView
                                android:id="@+id/iv_service"
                                android:padding="@dimen/space_6"
                                android:layout_width="@dimen/space_60"
                                android:layout_height="@dimen/space_60"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ico_bangbang_fwz" />

                            <TextView
                                android:id="@+id/tv_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/icon_message_noread"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                android:visibility="gone"
                                android:gravity="center"
                                 />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务中"
                            android:textColor="@color/main_tool_text_nor"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:layout_marginBottom="@dimen/space_20"
                    android:layout_marginTop="@dimen/space_20"
                    android:background="@color/title_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_6"
                    android:text="我领的任务"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_17" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5" >

                    <LinearLayout
                        android:id="@+id/liner_unfinish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                       >

                        <RelativeLayout
                            android:layout_width="@dimen/space_66"
                            android:layout_height="@dimen/space_66" >

                            <ImageView
                                android:id="@+id/iv_unfinish"
                                android:padding="@dimen/space_6"
                                android:layout_width="@dimen/space_60"
                                android:layout_height="@dimen/space_60"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ico_bangbang_dwc" />

                            <TextView
                                android:id="@+id/tv_unfinish_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/icon_message_noread"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                android:visibility="gone"
                                android:gravity="center"
                                 />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待完成"
                            android:textColor="@color/main_tool_text_nor"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liner_un_gather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                         >

                        <RelativeLayout
                            android:layout_width="@dimen/space_66"
                            android:layout_height="@dimen/space_66" >

                            <ImageView
                                android:id="@+id/iv_un_gather"
                                android:padding="@dimen/space_6"
                                android:layout_width="@dimen/space_60"
                                android:layout_height="@dimen/space_60"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ico_bangbang_dsk" />

                            <TextView
                                android:id="@+id/tv_un_gather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/icon_message_noread"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                android:visibility="gone" 
                                android:gravity="center"
                                />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待收款"
                            android:textColor="@color/main_tool_text_nor"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liner_finish_gather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <RelativeLayout
                            android:layout_width="@dimen/space_66"
                            android:layout_height="@dimen/space_66" >

                            <ImageView
                                android:id="@+id/iv_finish_gather"
                                android:padding="@dimen/space_6"
                                android:layout_width="@dimen/space_60"
                                android:layout_height="@dimen/space_60"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ico_bangbang_ysk" />

                            <TextView
                                android:id="@+id/tv_finish_gather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/icon_message_noread"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                android:visibility="gone"
                                android:gravity="center"
                                 />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已收款"
                            android:textColor="@color/main_tool_text_nor"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_13"
                android:orientation="vertical" >

                <!-- 班级 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_13"
                    android:paddingRight="@dimen/space_25" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_13"
                        android:text="账户余额"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_17" />

                    <TextView
                        android:id="@+id/tv_totalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#999999"
                        android:text="余额:--"
                        android:textSize="@dimen/sp_13" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginRight="@dimen/space_20"
                    android:background="@color/title_line" />
                <!-- 班级人数 -->

                
            </LinearLayout>
            <RelativeLayout
                    android:id="@+id/rela_cash"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_13"
                    android:paddingRight="@dimen/space_25" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_13"
                        android:text="提现绑定"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_17" />

                    <TextView
                        android:id="@+id/tv_group_info_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_13" />
                </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rela_coupon"
                android:layout_marginTop="@dimen/space_13"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_13"
                android:paddingRight="@dimen/space_25" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_13"
                    android:text="优惠券"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/tv_total_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:layout_marginTop="@dimen/space_13"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_13"
                    android:paddingRight="@dimen/space_25" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_13"
                        android:text="开启新任务通知"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_17" />

                    <com.yuanding.schoolpass.view.toggle.ToggleButton
                        android:id="@+id/tb_set_message_help"
                        android:layout_width="@dimen/space_46"
                        android:layout_height="@dimen/space_24"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginRight="@dimen/space_20"
                    android:background="@color/title_line" />
                <!-- 辅导员 -->

                <RelativeLayout
                    android:id="@+id/rela_common_problem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_13"
                    android:paddingRight="@dimen/space_25" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_13"
                        android:text="常见问题"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_17" />
                </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>