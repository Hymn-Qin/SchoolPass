<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/liner_notice_detail_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/col_account_bg"
        android:visibility="visible" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="@dimen/space_17"
                    android:layout_height="50dp" >

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:text="拾获物品"
                        android:visibility="gone"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />

                    <EditText
                        android:layout_centerVertical="true"
                        android:id="@+id/et_lost_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_input_bg"
                        android:textColorHint="#999999"
                        android:hint="拾获物品"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dp"
                    android:visibility="gone"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="@dimen/space_17"
                    android:layout_height="50dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:background="@drawable/side_lost_position" />

                    <TextView
                        android:id="@+id/tv_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:text="拾获地点"
                        android:visibility="gone"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_lost_place"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_place"
                        android:background="@drawable/login_input_bg"
                        android:hint="拾获地点"
                        android:textColorHint="#999999"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dp"
                    android:visibility="gone"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="@dimen/space_17"
                    android:layout_height="50dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:text="拾获时间"
                        android:visibility="gone"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_lost_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/login_input_bg"
                        android:hint="拾获时间"
                        android:textColorHint="#999999"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dp"
                    android:visibility="gone"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="@dimen/space_17"
                    android:layout_height="50dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:text="联系方式"
                        android:visibility="gone"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />

                    <EditText
                        android:inputType="number"
                        android:singleLine="true"
                        android:id="@+id/et_lost_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/login_input_bg"
                        android:hint="联系方式：默认本机电话"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dp"
                    android:visibility="gone"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:id="@+id/rela_add_iamge"
                    android:layout_width="fill_parent"
                    android:visibility="gone"
                    android:layout_height="50dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_add_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:text="添加图片"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />
                </RelativeLayout>

                <EditText
                    android:layout_marginTop="@dimen/space_17"
                    android:id="@+id/et_lost_desc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/side_remark_bg"
                    android:gravity="top"
                    android:hint="请描述物品"
                    android:paddingTop="@dimen/space_10"
                    android:paddingLeft="@dimen/space_20"
                    android:textColor="@color/black_code"
                    android:textSize="17sp" />
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                <com.yuanding.schoolpass.view.MyGridView
                    android:layout_marginTop="@dimen/space_17"
                    android:id="@+id/noScrollgridview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="10dp"
                    android:numColumns="2"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" >
                </com.yuanding.schoolpass.view.MyGridView>

          </LinearLayout>
                <View
                    android:layout_marginTop="9dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dp"
                    android:visibility="gone"
                    android:background="#CCCCCC" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>