<?xml version="1.0" encoding="utf-8"?>
<!--
     多余一个选项卡的情况、下面为图片、未读数量在文字右上角、例如：文件分享功能
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_marginLeft="-3dip"
    android:layout_marginRight="-3dip"
    android:layout_weight="1"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tab_title_tips"
        style="@style/MyWidget.TabText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@id/tab_title"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/white"
         android:visibility="gone"
        >
    </TextView>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
         android:layout_alignParentRight="true"
         android:layout_marginTop="@dimen/space_14"
        android:layout_marginRight="@dimen/space_18"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/icon_message_noread" />
    
    <TextView
        android:id="@+id/tab_title_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/space_14"
        android:layout_marginRight="@dimen/space_24"
        android:gravity="center"
        android:textColor="@color/white"
        android:scaleType="fitXY"
        android:text="2" />

</RelativeLayout>
