<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rela_no_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_70"
        android:layout_marginTop="@dimen/space_12"
        android:background="@color/white"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/iv_no_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_20"
            android:background="@drawable/bangbang_ico_zhifubao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_toRightOf="@+id/iv_no_bind"
            android:text="点击绑定支付宝账户"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_20"
            android:background="@drawable/ico_bangbang_jty" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_70"
        android:layout_marginTop="@dimen/space_12"
        android:background="@color/white"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_20"
            android:background="@drawable/bangbang_ico_zhifubao" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_toRightOf="@+id/iv_bind"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王强"
                android:textColor="#33bdff"
                android:textSize="@dimen/sp_15" />

            <TextView
                 android:id="@+id/tv_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wangqiang@d.mfklsdnf"
                android:textColor="#33bdff"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_bind"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_12"
        android:text="支付宝若不是您的真实姓名，请联系客服修改，否则无法提现到账！"
        android:textColor="@color/title_no_focus_login"
        android:textSize="@dimen/sp_13"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/liner_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_70"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="@dimen/space_66"
            android:layout_height="@dimen/space_66"
            android:background="@drawable/bangbang_ico_zhifubao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_13"
            android:text="支付宝"
            android:textColor="@color/black_code"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sp_20"
            android:layout_marginRight="@dimen/sp_20"
            android:layout_marginTop="@dimen/sp_13"
            android:text="支付宝若不是您的真实姓名，请联系客服修改，否则无法提现到账！"
            android:textColor="@color/title_no_focus_login"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_18"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝姓名"
                    android:textColor="@color/black_code"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_no_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_18"
                    android:text=""
                    android:textColor="#49c433"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_0.7"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:background="@color/title_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝账户"
                    android:textColor="@color/black_code"
                    android:textSize="@dimen/sp_16" />

                <EditText
                   android:id="@+id/et_apay_acc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_18"
                    android:background="@color/white"
                   android:hint="请输入账户名(手机号或邮箱)"
                    android:textColor="#49c433"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_0.7"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:background="@color/title_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                   
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="登录密码"
                    android:textColor="@color/black_code"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_34"
                    android:background="@color/white"

                    android:password="true"
                    android:textColor="#49c433"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_bind"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_56"
        android:layout_alignParentBottom="true"
        android:background="@color/for_help_pay_start"
        android:text="确认绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:visibility="gone" />

</RelativeLayout>