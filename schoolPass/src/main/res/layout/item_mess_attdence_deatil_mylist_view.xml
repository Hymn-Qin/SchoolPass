<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_mylist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_attdence_developer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:padding="10dp"
                android:text="张学林"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/tv_attdence_person_num"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="30"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.1dp"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/tv_ask_for_leave_person"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="40"
                android:textColor="#49C433"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.1dp"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/tv_attdence_late_person"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="50"
                android:textColor="#FF9900"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.1dp"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/tv_attdence_earlyer_person"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="4"
                android:textColor="#FF6600"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.1dp"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/tv_attdence_absent_person"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="6"
                android:textColor="#CC0000"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.1dp"
                android:background="#CCCCCC"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:id="@+id/view_attdence_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_20"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>